{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Secondary education enrollement",
  "title": {
    "text": "The % of the population that attend Secondary education",
    "subtitle": "Source: The World Bank data for 2017",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/andreavasiliou/AndreaVasiliou.github.io/main/Data-School%20enrollement%20percentage%20in%20secondary%20school.csv"
  },
  "mark": {"type": "bar", "color": "#16c6d3", "strokeWidth": 2, "opacity": 1},
  "height": 300,
  "width": 300,
  "encoding": {
    "y": {"field": "Country", "type": "ordinal", "sort": "-x", "title": null},
    "x": {
      "field": "% of Secondary enrollement in 2017",
      "type": "quantitative",
      "sort": {
        "field": "% of Secondary enrollement in 2017",
        "order": "descending"
      },
      "title": null,
      "scale": {"domain": [0, 140]}
    },
    "tooltip": [
      {
        "field": "% of Secondary enrollement in 2017",
        "type": "quantitative",
        "title": "% of secondary enrollement"
      },
      {"aggregate": "sum", "type": "ordinal", "title": "Country"}
    ]
  },
  "config": {}
}